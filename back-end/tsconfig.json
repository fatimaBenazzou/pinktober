{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["es2021", "dom"],
		"module": "commonjs",
		"rootDir": "./src",
		"baseUrl": "src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": false
	},
	"typedocOptions": {
		"entryPoints": ["src/index.ts"],
		"out": "docs"
	},
	"include": ["src"]
}
